<Window x:Name="InterfaceWindow" x:Class="pimmsInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PiMMS Interface" Height="272.164" Width="342.134" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" ResizeMode="NoResize">
    <Canvas Height="165" Margin="10,10,4,0" VerticalAlignment="Top">
        <GroupBox Header="Trigger" Canvas.Left="10" Canvas.Top="10" Height="83" Width="298">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="298" Margin="0,0,0,0">
                <CheckBox x:Name="TrigChk" Content="Connect" Checked="TrigChk_CheckedChanged" Unchecked="TrigChk_CheckedChanged" Margin="10,10,52,20"/>
                <Button x:Name="TrigPollBtn" Content="Poll Response" Click="TrigPollBtn_Click" Margin="93,7,120,27" Height="22" Width="85"/>
                <Button x:Name="TrigEventBtn" Content="Trigger Event" Click="TrigEventBtn_Click" Margin="183,7,30,27" Height="22" Width="85"/>
                <Button x:Name="TrigT1Btn" Content="Train 1 Start" Click="TrigT1Btn_Click" Margin="93,34,120,0" Height="22" Width="85"/>
                <Button x:Name="TrigT2Btn" Content="Train 2 Start" Click="TrigT2Btn_Click" Margin="183,34,30,0" Width="85" Height="22"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Controller1" Canvas.Left="10" Canvas.Top="98" Height="58" Width="298">
            <Grid HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="288" Margin="0,0,-2,-10">
                <Button x:Name="Con1LogOnBtn" Content="Log On" Click="Controller1LogOnBtn_Click" Margin="95,7,108,17" Width="85" Height="22" RenderTransformOrigin="0.541,-0.273"/>
                <CheckBox x:Name="Controller1Chk" Content="Connect" Checked="Controller1Chk_CheckedChanged" Unchecked="Controller1Chk_CheckedChanged" Margin="10,10,198,14" RenderTransformOrigin="1.1,1.35"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Controller2" Canvas.Left="10" Canvas.Top="158" Height="58" Width="298">
            <Grid HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="288" Margin="0,0,-2,-10">
                <Button x:Name="Con2LogOnBtn" Content="Log On" Click="Controller2LogOnBtn_Click" Margin="95,7,108,17" Width="85" Height="22" RenderTransformOrigin="0.541,-0.273"/>
                <CheckBox x:Name="Controller2Chk" Content="Connect" Checked="Controller2Chk_CheckedChanged" Unchecked="Controller2Chk_CheckedChanged" Margin="10,10,198,14" RenderTransformOrigin="1.1,1.35"/>
            </Grid>
        </GroupBox>
    </Canvas>
</Window>
