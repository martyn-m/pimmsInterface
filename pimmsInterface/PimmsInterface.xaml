<Window x:Name="InterfaceWindow" x:Class="pimmsInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PiMMS Interface" Height="238.164" Width="411.134" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" ResizeMode="NoResize">
    <Canvas HorizontalAlignment="Left" Height="195" Margin="10,10,0,0" VerticalAlignment="Top" Width="391">
        <Label x:Name="TrigLabel" Content="Trigger" Canvas.Left="10" Canvas.Top="10"/>
        <CheckBox x:Name="TrigChk" Content="Connect" Canvas.Left="10" Canvas.Top="41" Checked="TrigChk_CheckedChanged" Unchecked="TrigChk_CheckedChanged"/>
        <Button x:Name="TrigPollBtn" Content="Poll Response" Canvas.Left="101" Canvas.Top="38" Width="85" Click="TrigPollBtn_Click"/>
        <Button x:Name="TrigEventBtn" Content="Trigger Event" Canvas.Left="191" Canvas.Top="38" Width="85" Click="TrigEventBtn_Click"/>
        <Button x:Name="TrigT1Btn" Content="Train 1 Start" Canvas.Left="101" Canvas.Top="65" Width="85" Click="TrigT1Btn_Click"/>
        <Button x:Name="TrigT2Btn" Content="Train 2 Start" Canvas.Left="191" Canvas.Top="65" Width="85" Click="TrigT2Btn_Click"/>
        <Label x:Name="ControllerLbl" Content="Controller" Canvas.Left="10" Canvas.Top="101"/>
        <CheckBox x:Name="ControllerChk" Content="Connect" Canvas.Left="12" Canvas.Top="132" Checked="ControllerChk_CheckedChanged" Unchecked="ControllerChk_CheckedChanged"/>
        <Button x:Name="ConLogOnBtn" Content="Log On" Canvas.Left="101" Canvas.Top="129" Width="85" Click="ConLogOnBtn_Click"/>
        
    </Canvas>
</Window>
